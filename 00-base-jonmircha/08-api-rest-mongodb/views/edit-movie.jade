extends layout

block content
    section.container
      include header
      div.item
        form.form(method="POST" action="/actualizar/#{data.movie_id}")
            fieldset 
                //- And a litle modification about MongoDB, we don't need to have a index position who in an array, because MongoDB returs our DOCUMENTS on an object, something what mySQL don't do
                div.container.p1
                    label.item.i-b.v-top.ph3.center(for="movie_id") IMDb Id:
                    input.item.i-b.v-top.ph9#id(type="text", name="id", value="#{data.movie_id}", required, disabled)
                    input#movie_id(type="hidden", name="movie_id", value="#{data.movie_id}", required)
                div.container.p1
                    label.item.i-b.v-top.ph3.center(for="title") Titulo:
                    input.item.i-b.v-top.ph9#title(type="text", name="title", value="#{data.title}", required)
                div.container.p1
                    label.item.i-b.v-top.ph3.center(for="release_year") AÃ±o:
                    input.item.i-b.v-top.ph9#released_year(type="text", name="released_year", value="#{data.released_year}", required)
                div.container.p1
                    label.item.i-b.v-top.ph3.center(for="rating") Rating:
                    input.item.i-b.v-top.ph9#rating(type="text", name="rating", value="#{data.rating}", required)
                div.container.p1
                    label.item.i-b.v-top.ph3.center(for="image_movie") Poster:
                    input.item.i-b.v-top.ph9#image_movie(type="text", name="image_movie", value="#{data.image_movie}",required)
                div.container.p1
                    input.item.ph6.mauto.button.add(type="submit" value="Agregar")
                    input(type="hidden", name="_method" value="PUT")